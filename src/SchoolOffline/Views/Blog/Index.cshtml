@{
    List<String> typeList = (List<String>)ViewData["typeList"];
}
<script src="http://code.jquery.com/jquery-latest.js"></script>

typename:<input type="text" id="txtTitle" />
        <select id="sel">
            @foreach (var item in typeList)
                    {
                <option value="@item">@item</option>
            }
        </select>
    <br />
    <input value="获取链接信息" type="button" onclick="getUrl()" />
    <br />
    <textarea style="width:500px;height:200px;" id="txtUrl"></textarea><br />
    <div id="result"></div>
    <script type="text/javascript">
        function getUrl() {
            var type = $("#sel").val();
            $.ajax({
                url: "/blog/GetPageUrl",
                type: "GET",
                data: { type: type },
                success: function (data) {
                    $("#txtUrl").val(data);
                    $("#result").html(data);
                }
            })
        }
    </script>
