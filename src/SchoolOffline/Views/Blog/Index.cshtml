typename:<input type="text" id="txtTitle" /><br />
<input value="获取链接信息" type="button" onclick="getUrl()" /><br />
<textarea style="width:500px;height:200px;" id="txtUrl"></textarea>
<script type="text/javascript">
    function getUrl() {
        var type = $("#txtTitle").val();
        $.ajax({
            url: "/blog/GetPageUrl",
            type: "GET",
            data: { type: type },
            success: function (data) {
                $("#txtUrl").val(data);
            }
        })
    }
</script>